#!/usr/bin/env bash
set -e
if [[ ! -d "/home/es46/Documents/Projects/master_mind_KA_projekt" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/es46/Documents/Projects/master_mind_KA_projekt")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/es46/Documents/Projects/master_mind_KA_projekt" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/es46/Documents/Projects/master_mind_KA_projekt/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/es46/Documents/Projects/master_mind_KA_projekt/.envrc" "/home/es46/Documents/Projects/master_mind_KA_projekt/.direnv"/*.rc
